#include <iostream>
#include <string>

using namespace std;

int main() {
    int orderNumber;
    string promoCode;

    // Input
    cout << "Enter your order number: ";
    cin >> orderNumber;
    cout << "Enter promo code: ";
    cin.ignore(); // Clears the newline character from the input buffer
    getline(cin, promoCode); // Allows promo code with space like "THANK YOU"

    // Process and Output
    if (orderNumber == 1 && promoCode == "THANK YOU") {
        cout << "Free delivery applied" << endl;
    } else {
        cout << "Promo not valid or not first order" << endl;
    }

    return 0;
}
